<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Fragments_Activity">

    <RelativeLayout
        android:id="@+id/relative_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_arrow"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project V"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/framelay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative_top"
        android:layout_above="@+id/lenear"/>

    <LinearLayout
        android:id="@+id/lenear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="4">
        <RelativeLayout
            android:id="@+id/relative_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/img_homev"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/home_home"
                android:layout_centerHorizontal="true"
                app:tint="@color/red" />
            <ImageView
                android:id="@+id/img_homeh"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/home_home"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/txt_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_homeh"
                android:text="Home"
                android:textSize="12dp"
                android:textColor="@color/gray"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_carthomev"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/cart_home"
                android:layout_centerHorizontal="true"
                app:tint="@color/red" />
            <ImageView
                android:id="@+id/img_carthomeh"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/cart_home"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/txt_cart_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_carthomev"
                android:text="Cart"
                android:textSize="12dp"
                android:textColor="@color/gray"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_fav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_favv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/love_home"
                android:layout_centerHorizontal="true"
                app:tint="@color/red" />
            <ImageView
                android:id="@+id/img_favh"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/love_home"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/txt_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_favv"
                android:text="Fav"
                android:textSize="12dp"
                android:textColor="@color/gray"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_profilev"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/user_home"
                android:layout_centerHorizontal="true"
                app:tint="@color/red" />
            <ImageView
                android:id="@+id/img_profileh"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/user_home"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/txt_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_profilev"
                android:text="profile"
                android:textSize="12dp"
                android:textColor="@color/gray"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>